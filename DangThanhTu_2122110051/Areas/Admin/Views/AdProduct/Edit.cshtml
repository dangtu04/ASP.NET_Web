            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info btn-sm" })
        </div>
    </div>
}
